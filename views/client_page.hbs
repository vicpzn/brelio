<div>
    {{> crm_nav}}
</div>

<div id="client-page">
    <div id="client-infos">
        <table>
            <tbody>
                <tr>
                    <td>Firstname</td>
                    <td>{{firstname}}</td>
                </tr>
                <tr>
                    <td>Lastname</td>
                    <td>{{lastname}}</td>
                </tr>
                <tr>
                    <td>Email address</td>
                    <td>{{email}}</td>
                </tr>
                <tr>
                    <td>Phone number</td>
                    <td>{{phonenumber}}</td>
                </tr>   
                <tr>
                    <td>Address</td>
                    <td>{{streetnumber}} {{street}}</td>
                </tr>                                
                <tr>
                    <td>Zipcode</td>
                    <td>{{zipcode}}</td>
                </tr>                
                <tr>
                    <td>City</td>
                    <td>{{city}}</td>
                </tr>                
                <tr>
                    <td>Country</td>
                    <td>{{country}}</td>
                </tr>
            </tbody>
        </table>
    </div>

    <div id="tasks">
        <table>
            <th>Tasks</th>
            <tr>
                <td><input type="checkbox"></td>
                <td>{{task_deadline}}</td>
                <td>{{task_associated}}</td>
            </tr>
        </table>
    </div>
    <div></div>
    <div></div>

</div>
