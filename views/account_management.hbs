{{> burger_menu}}
{{> searchbar}}
{{> current_user}}

<div id="container-account-management">
    <h1>Account Management</h1>

    <table id="account-table">
        <thead>
            <tr>
                <th>Prospect</th>
                <th>Task</th>
                <th>Task Deadline</th>
                <th>Priority</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {{#each clients}}
            <tr>
                <td>
                    <p>{{this.firstname}} {{this.lastname}}</p>
                </td>
                {{#if this.task}}
                {{#each this.task}}
                <td>
                    <p>{{this.task_associated}}</p>
                </td>
                <td>
                    <p>{{formatDate this.task_deadline}}</p>
                </td>
                <td>
                    <p>{{this.priority}}</p>
                </td>
                {{/each}}
                {{else}}
                <td>
                    <p>&nbsp;</p>
                </td>
                <td>
                    <p>&nbsp;</p>
                </td>
                <td>
                    <p>&nbsp;</p>
                </td>
                {{/if}}
                <td>
                    <a class="fas fa-eye" href="/account-management/{{this._id}}"></a>
                    <a class="fas fa-trash" href="/account-management/delete/{{this._id}}"></a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>

    <div id="manage-btn">
        <a href="/account-management/add"><i class="fas fa-plus"></i> Add a new prospect</a>
    </div>

</div>