{{> landing_nav}}

<form method="post" action="/signup" id="form_user">
    <div class="wrapper">
        <label for="firstname" class="label">Name</label>
        <input name="firstname" id="firstname" type="text" class="input" placeholder="Name" required>
    </div>
    <div class="wrapper">
        <label for="lastname" class="label">Lastname</label>
        <input name="lastname" id="lastname" type="text" class="input" placeholder="Last name" required>
    </div>
    <div class="wrapper">
        <label for="email" class="label">Email</label>
        <input name="email" id="email" type="email" class="input" placeholder="Email" required>
    </div>
    <div class="wrapper">
        <label for="phonenumber" class="label">Phone number</label>
        <input name="phonenumber" id="phonenumber" type="number" class="input" placeholder="Phone number" required>
    </div>
    <div class="wrapper">
        <label for="company" class="label">Company</label>
        <input name="company" id="company" type="text" class="input" placeholder="Company" required>
    </div>
    <div class="wrapper">
        <label for="password" class="label">Password</label>
        <input name="password" id="password" type="password" class="input" placeholder="Password" required>
    </div>
    <button class="btn">Sign up</button>
</form>
<p class="link">Already registered? <a href="/signin" class="btn">Click here</a></p>
</section>