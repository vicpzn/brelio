{{> burger_menu}}

<div class="container">
    <form action="/dashboard/register/{{company._id}}" method="post" class="form" enctype="multipart/form-data">

        <h3 class="title">Edit your company</h3>

        <div class="item">
            <label for="name" class="label">Company</label>
            <input name="name" id="name" type="text" class="input" placeholder="Company" value="{{company.name}}">
        </div>


        <div class="item">
            <label for="streetnumber" class="label">Street Number</label>
            <input name="streetnumber" id="streetnumber" type="text" class="input" placeholder="Street Number"
                value="{{company.streetnumber}}">
        </div>

        <div class="item">
            <label for="street" class="label">Street</label>
            <input name="street" id="street" type="text" class="input" placeholder="Street" value="{{company.street}}">
        </div>

        <div class="item">
            <label for="zipcode" class="label">Zipcode</label>
            <input name="zipcode" id="zipcode" type="text" class="input" placeholder="Zipcode"
                value="{{company.zipcode}}">
        </div>

        <div class="item">
            <label for="city" class="label">City</label>
            <input name="city" id="city" type="text" class="input" placeholder="City" value="{{company.city}}">
        </div>

        <div class="item">
            <label for="country" class="label">Country</label>
            <input name="country" id="country" type="text" class="input" placeholder="Country"
                value="{{company.country}}">
        </div>

        <div class="item">
            <label for="phonenumber" class="label">Phone Number</label>
            <input name="phonenumber" id="phonenumber" type="text" class="input" placeholder="Phone Number"
                value="{{company.phonenumber}}">
        </div>

        <div class="item">
            <img width="150px" src="{{company.logo}}" alt="{{company.name}}>
            <label for=" logo" class="label">Logo</label>
            <input name="logo" id="logo" type="file" class="input">
        </div>

        <button class="btn">Edit your company</button>

    </form>

</div>