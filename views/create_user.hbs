{{> burger_menu}}
{{> current_user}}

<div id="master-div-register">
    <h1 class="title-register">Create a new user</h1>
    <div id="company-add-box">

        <form method="post" action="/users/create" enctype="multipart/form-data">

            <div class="container-register">

                <div class="item-register">
                    <input name="firstname" type="text" placeholder="First Name" required>
                </div>

                <div class="item-register">
                    <input name="lastname" type="text" placeholder="Last Name" required>
                </div>

                <div class="item-register">
                    <input name="email" type="email" placeholder="joe@company.com" required>
                </div>

                <div class="item-register">
                    <input name="phonenumber" type="tel" placeholder="Phone Number" required>
                </div>

                <select name="company">
                    <option value="{{currentUser.company._id}}">{{currentUser.company.name}}</option>
                </select>

                <select name="role">
                    <option value="user">User</option>
                    <option value="manager">Manager</option>
                </select>

                <div class="item-register">
                    <input name="password" type="password" placeholder="Password" required>
                </div>

                <div>
                    <input class="custom-file-input-avatar" type="file" name="avatar">
                </div>


            </div>
            <div class="center-btn">
                <button class="btn-register">Create a new user</button>
            </div>
        </form>
    </div>
</div>